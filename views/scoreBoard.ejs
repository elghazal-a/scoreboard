  </head>
  <body>
    <h1>Scoreboard</h1>

    <div id="scoreBoard">
		<div class="span3">
			<div class="col">
				<p>home team</p>
				<p class="number">1</p>

				<button class="btn btn-primary"><i class="icon-minus-sign icon-white"></i></button>
				<input class="input-small" type="text" value="0">
				<button class="btn btn-primary"><i class="icon-plus-sign icon-white"></i></button>
				<br>
				<button class="btn btn-primary btn-small">Set</button>
			</div>
		</div>
		<div class="span6">
			<div class="col">

				<p>Time left</p>
				<p class="number">10:30</p>

				<input class="input-mini" type="text" placeholder="MM">
				<input class="input-mini" type="text" placeholder="SS">
				<br>

				<button class="btn btn-primary btn-small">Set time</button>
				<br>
				<br>

				<button class="btn btn-primary btn-small">Start</button>
				<button class="btn btn-primary btn-small">Stop</button>
			</div>
		</div>
		<div class="span3">
			<div class="col">

				<p>away team</p>
				<p class="number">1</p>

				<button class="btn btn-primary"><i class="icon-minus-sign icon-white"></i></button>
				<input class="input-small" type="text" value="0">
				<button class="btn btn-primary"><i class="icon-plus-sign icon-white"></i></button>
				<br>

				<button class="btn btn-primary btn-small">Set</button>
			</div>
		</div>
    </div>


